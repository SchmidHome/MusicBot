{
  "name": "musicbot",
  "version": "0.0.1",
  "description": "",
  "main": "out/index.js",
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "start": "node out/index.js",
    "serve": "tsc && node out/index.js",
    "dev": "nodemon src/index.ts",
    "check-db": "ts-node src/index.ts check-db",
    "pm2-start": "pm2 start out/index.js --name musicbot -- --color",
    "pm2-watch": "pm2 start out/index.js --name musicbot -- --color --watch out/*",
    "pm2-stop": "pm2 stop musicbot && pm2 delete musicbot",
    "pm2-restart": "pm2 restart musicbot",
    "pm2-log": "pm2 logs musicbot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SchmidHome/MusicBot.git"
  },
  "keywords": [
    "TypeScript"
  ],
  "author": "Johannes Schmid",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SchmidHome/MusicBot/issues"
  },
  "homepage": "https://github.com/SchmidHome/MusicBot",
  "dependencies": {
    "@idot-digital/simplecache": "^1.3.0",
    "@svrooij/sonos": "^2.5.0",
    "async-mutex": "^0.4.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "homeassistant-ws": "^0.2.2",
    "mongodb": "^4.12.1",
    "morgan": "^1.10.0",
    "node-fetch": "2.6.7",
    "node-telegram-bot-api": "^0.58.0",
    "node-vibrant": "^3.2.1-alpha.1",
    "spotify-web-api-node": "^5.0.2",
    "ts-log": "^2.2.5",
    "ts-morph": "^16.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.1",
    "@types/node-fetch": "2.x",
    "@types/node-telegram-bot-api": "^0.57.1",
    "@types/spotify-web-api-node": "^5.0.7",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "nodemon": "^3.0.1",
